<!DOCTYPE html>
<html>
<head>
    <title>Product List</title>
    <link rel="stylesheet" href="your-styles.css"> <!-- Add your custom CSS file here -->
</head>
<body>
<header>
    <nav class="navbar">
        <div class="container">
            <a class="navbar-brand" href="/">Product Store</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/products/new">New Product</a>
                </li>
            </ul>
        </div>
    </nav>
    <h1>Welcome to Our Product Store</h1>
</header>

<div class="product-list">
    <% products.forEach(product => { %>
        <div class="product-card">
            <img src="<%= product.imageUrl %>" alt="<%= product.name %>" />
            <h2><%= product.name %></h2>
            <p><%= product.description %></p>
            <p>Price: $<%= product.price %></p>
            <% if (product.hasDiscount) { %>
                <p>Discounted Price: $<%= product.price - product.discount %></p>
            <% } %>
            <p>Category: <%= product.category.name %></p>
            <p>Provider: <%= product.provider.name %></p>
            <div class="product-controls">
                <a href="/products/<%= product._id %>/edit" class="btn btn-primary">Edit</a>
                <form method="POST" action="/products/<%= product._id %>?_method=DELETE" class="delete-form">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    <% }); %>
</div>

<footer>
    <p>&copy; 2023 Product Store</p>
</footer>
</body>
</html>
